        <Rectangle Width="100" Height="130" Canvas.Left="800" Canvas.Top="250" Fill="Black" Panel.ZIndex="1" />
        <Rectangle Width="100" Height="130" Canvas.Left="800" Canvas.Top="50" Fill="Black" Panel.ZIndex="1" />
        <Button Width="100" Height="130" BorderThickness="1" Canvas.Top="250" Canvas.Left="70" Name="Card1" Command="{Binding Path=FirstCardCommand}">
            <Button.Background>
                <ImageBrush ImageSource ="{Binding Path= FirstCard.Image}" Stretch="Uniform"></ImageBrush>
            </Button.Background>
            <Button.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation From="70" To="200" Duration="0:0:0.5" Storyboard.TargetProperty="(Canvas.Left)" AutoReverse="False" />
                            <DoubleAnimation From="250" To="350" Duration="0:0:0.5" Storyboard.TargetProperty="(Canvas.Top)" AutoReverse="False" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger RoutedEvent="Button.Click">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation From="200" To="800" Duration="0:0:3.5" Storyboard.TargetProperty="(Canvas.Left)" AutoReverse="False" />
                            <DoubleAnimation From="350" To="175" Duration="0:0:1.0" Storyboard.TargetProperty="(Canvas.Top)" AutoReverse="False" />
                            <DoubleAnimation From="175" To="250" BeginTime="0:0:1.0" Duration="0:0:2.5" Storyboard.TargetProperty="(Canvas.Top)" AutoReverse="False" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger RoutedEvent="Button.Click">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation From="200" To="800" Duration="0:0:3.5" Storyboard.TargetProperty="(Canvas.Left)" AutoReverse="False" />
                            <DoubleAnimation From="350" To="175" Duration="0:0:1.0" Storyboard.TargetProperty="(Canvas.Top)" AutoReverse="False" />
                            <DoubleAnimation From="175" To="250" BeginTime="0:0:1.0" Duration="0:0:2.5" Storyboard.TargetProperty="(Canvas.Top)" AutoReverse="False" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger RoutedEvent="Button.Click">
                    <BeginStoryboard>
                        <Storyboard>
                            <BooleanAnimationUsingKeyFrames Storyboard.TargetName="EndButton" Storyboard.TargetProperty="IsClicked">
                                <DiscreteBooleanKeyFrame KeyTime="0:0:0" Value="True"/>
                            </BooleanAnimationUsingKeyFrames>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Button.Triggers>

        </Button>
