        xmlns:controls="clr-namespace:CardGameEngine.Controls"
        mc:Ignorable="d"
        Title="FieldGridView" Height="450" Width="1000">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadDeckCommand}" >
